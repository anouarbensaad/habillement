<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
    http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
    <persistence-unit name="persistance" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
	<!-- Gestion de Production -->
		<class>com.gpro.consulting.tiers.gpao.persitance.entite.CompositionOfEntite</class>
		<class>com.gpro.consulting.tiers.gpao.persitance.entite.DetailOfEntite</class>
		<class>com.gpro.consulting.tiers.gpao.persitance.entite.OrdreFabricationEntite</class>
		<class>com.gpro.consulting.tiers.gpao.persitance.entite.PhaseOfEntite</class>
		<class>com.gpro.consulting.tiers.gpao.persitance.entite.ChaineEntite</class>
		<class>com.gpro.consulting.tiers.gpao.persitance.entite.StatutOfEntite</class>
		<class>com.gpro.consulting.tiers.gpao.persitance.entite.CauseVariationEntitie</class>

        <properties>
            <property name="hibernate.max_fetch_depth" value="0" />
            <property name="hibernate.hbm2ddl.auto" value="none" />
            <property name="hibernate.show_sql" value="false" />
            <property name="hibernate.format_sql" value="false" />
            <property name="use_sql_comments" value="false" />
            <property name="hibernate.archive.autodetection" value="class" />
            <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider" />
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
            <property name="hibernate.cache.use_second_level_cache" value="false" />
            <property name="hibernate.cache.use_query_cache" value="false" />
        </properties>
    </persistence-unit>

</persistence>
